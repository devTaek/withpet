{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",  // 서버 빌드 결과물 위치
    "rootDir": "src",             // 서버 코드의 루트 디렉토리
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": ["./src/types","./node_modules/@types"],
  },
  "include": ["src/**/*.ts", "types/**/*.d.ts"], // 서버의 app.ts 파일 포함
  "exclude": ["node_modules"]
}